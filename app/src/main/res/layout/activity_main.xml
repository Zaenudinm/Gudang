<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stok Barang"
        android:gravity="center"
        android:textSize="30dp"/>
    <EditText
        android:id="@+id/barang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Barang"/>
   <CheckBox
       android:id="@+id/elektron"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Elektronik"/>
    <CheckBox
        android:id="@+id/rumahTg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rumah Tangga"/>
    <EditText
        android:id="@+id/jum_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jumlah Barang"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input Stok Barang"
        android:background="@android:color/holo_orange_light"
        android:onClick="input"/>


</LinearLayout>